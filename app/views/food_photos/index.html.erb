<div class="page-header">
  <h1>
    Food photos
    <a href="/food_photos/new" class="btn btn-lg btn-success">New Food photo</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Menu item</th>
        <th>Item review</th>
        <th>Comment</th>
        <th>Actions</th>
      </tr>

      <% @food_photos.each do |food_photo| %>
      <tr>
        <td><%= food_photo.user.username %></td>
        <td><%= food_photo.menu_item_id %></td>
        <td><%= food_photo.item_review %></td>
        <td><%= food_photo.comment %></td>
        <td>
          <a href="/food_photos/<%= food_photo.id %>" class="btn btn-primary">Show</a>
          <a href="/food_photos/<%= food_photo.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_food_photo/<%= food_photo.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
