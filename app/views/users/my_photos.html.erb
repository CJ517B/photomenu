
<div class="container">
  <div class="row">
    <div class="col-md-12 mb-2">
      <div class="row">
        <div class="col-md-12">
          <table class="table table-striped table-hover">
            <tr>
              <th>Restaurant</th>
              <th>Dishes</th>
              <th>Photos</th>
          
              <th>Action</th>
            </tr>
            <% FoodPhoto.where(:user_id=> @me.id).each do |b| %>
            <tr>
              <th><a href="/restaurants/<%= b.menu_item.menu.restaurant.id %>"><%= b.menu_item.menu.restaurant.name %></a>
              </th>
              <th><a href="/menu_items/<%= b.menu_item.id %>"><%= b.menu_item.item_name %></th>
                <th>
                  <% if b.menu_item.photos.first.present? %>
                  <div class="col-xs-6 col-md-3">
                    <a href="/food_photos/<%= b.menu_item.photos.first.id %>" class="thumbnail">
                      <img src="<%= b.menu_item.photos.first.photo %>" class="img-responsive"></img>
                    </a>
                  </div>
                  <% end %>
                </th>

                <th>
                  <div class="btn-group btn-group-xs pull-right">
                    <a href="/food_photos/<%= b.id %>" class="btn btn-primary">
                      <i class="fa fa-search-plus"></i>
                    </a>
                    <a href="/food_photos/<%= b.id %>/edit" class="btn btn-warning">
                      <i class="fa fa-edit"></i>
                    </a>
                    <a href="/delete_food_photo/<%= b.id %>" class="btn btn-danger" rel="nofollow">
                      <i class="fa fa-trash-o"></i>
                    </a>
                  </div>
                </th>
              </tr>
                <% end %>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
