
<div class="container">
  <% @me.bookmarks.each do |b| %>
  <div class="row">
    <div class="col-md-12 mb-2">
      <div class="row">
        <div class="col-md-12">
          <table class="table table-striped table-hover">
            <tr>
              <th>Restaurant</th>
              <th>Dishes</th>
              <th>Photos</th>
              <th>Type</th>
              <th>Bookmark</th>
            </tr>
            <tr>
              <th><a href="/restaurants/<%= b.menu_item.menu.restaurant.id %>"><%= b.menu_item.menu.restaurant.name %></a>
              </th>
              <th><a href="/menu_items/<%= b.menu_item.id %>"><%= b.menu_item.item_name %></th>
              <th>
              <% if b.menu_item.photos.first.present? %>
              <div class="col-xs-6 col-md-3">
                <a href="/food_photos/<%= b.menu_item.photos.first.id %>" class="thumbnail">
                  <img src="<%= b.menu_item.photos.first.photo %>" class="img-responsive"></img>
                </a>
              </div>
              <% end %>
              <div>
                <a href="/food_photos/new">
                  <i class="fa fa-plus-square" aria-hidden="true"></i>
                </a>
              </div>
            </th>
              <th>Category</th>
            </tr>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
