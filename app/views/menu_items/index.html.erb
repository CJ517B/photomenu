<div class="page-header">
  <h1>
    Menu items
    <a href="/menu_items/new" class="btn btn-lg btn-success">New Menu item</a>
  </h1>
</div>



<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Item name</th>
        <th>Price</th>
        <th>Average review</th>
        <th>Category name</th>
        <th>Menu</th>
        <th>Actions</th>
      </tr>

      <% @menu_items.each do |menu_item| %>
      <tr>
        <td><%= menu_item.item_name %></td>
        <td><%= menu_item.price %></td>
        <td><%= menu_item.average_review %></td>
        <td><%= menu_item.MenuCategoryId %></td>
        <td>
          <% if menu_item.menu.present? %>
            <a href="/menus/<%= menu_item.menu.id %>">
              <%= menu_item.menu.restaurant_id %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/menu_items/<%= menu_item.id %>" class="btn btn-primary">Show</a>
          <a href="/menu_items/<%= menu_item.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_menu_item/<%= menu_item.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @menu_items, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
