<!-- Validation failure messages -->
<% if @want_to_order.errors.any? %>
  <% @want_to_order.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Want To Order</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_want_to_order" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :username, @want_to_order.user_id), :class => "form-control") %>
      </div>

      <!-- Label and input for menu_item_id -->
      <div class="form-group">
        <label for="menu_item_id" class="control-label">
          Menu item
        </label>

        <%= select_tag(:menu_item_id, options_from_collection_for_select(MenuItem.all, :id, :item_name, @want_to_order.menu_item_id), :class => "form-control") %>
      </div>

      <button class="btn btn-success">
        Create Want To Order
      </button>
      or
      <a href="/want_to_orders">Cancel</a>
    </form>
  </div>
</div>
