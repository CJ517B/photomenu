<div class="page-header">
  <h1>
    Want to orders
    <a href="/want_to_orders/new" class="btn btn-lg btn-success">New Want to order</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Menu item</th>
        <th>Actions</th>
      </tr>

      <% @want_to_orders.each do |want_to_order| %>
      <tr>
        <td><%= want_to_order.user.username %></td>
        <td><%= want_to_order.menu_item_id %></td>
        <td>
          <a href="/want_to_orders/<%= want_to_order.id %>" class="btn btn-primary">Show</a>
          <a href="/want_to_orders/<%= want_to_order.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_want_to_order/<%= want_to_order.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
