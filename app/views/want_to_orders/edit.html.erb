<!-- Validation failure messages -->
<% if @want_to_order.errors.any? %>
  <% @want_to_order.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Want To Order #<%= @want_to_order.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_want_to_order/<%= @want_to_order.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @want_to_order.user_id %>">
      </div>

      <!-- Label and input for menu_item_id -->
      <div class="form-group">
        <label for="menu_item_id" class="control-label">
          Menu item
        </label>

        <input type="text" id="menu_item_id" name="menu_item_id" placeholder="Menu item" class="form-control" value="<%= @want_to_order.menu_item_id %>">
      </div>

      <button class="btn btn-warning">
        Update Want To Order
      </button>
      or
      <a href="/want_to_orders/<%= @want_to_order.id %>">Cancel</a>
    </form>
  </div>
</div>
