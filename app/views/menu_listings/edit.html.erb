<!-- Validation failure messages -->
<% if @menu_listing.errors.any? %>
  <% @menu_listing.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Menu Listing #<%= @menu_listing.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_menu_listing/<%= @menu_listing.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for restaurant_id -->
      <div class="form-group">
        <label for="restaurant_id" class="control-label">
          Restaurant
        </label>

        <input type="text" id="restaurant_id" name="restaurant_id" placeholder="Restaurant" class="form-control" value="<%= @menu_listing.restaurant_id %>">
      </div>

      <!-- Label and input for menu_id -->
      <div class="form-group">
        <label for="menu_id" class="control-label">
          Menu
        </label>

        <input type="text" id="menu_id" name="menu_id" placeholder="Menu" class="form-control" value="<%= @menu_listing.menu_id %>">
      </div>

      <button class="btn btn-warning">
        Update Menu Listing
      </button>
      or
      <a href="/menu_listings/<%= @menu_listing.id %>">Cancel</a>
    </form>
  </div>
</div>
