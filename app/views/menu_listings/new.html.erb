<!-- Validation failure messages -->
<% if @menu_listing.errors.any? %>
  <% @menu_listing.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Menu Listing</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_menu_listing" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for restaurant_id -->
      <div class="form-group">
        <label for="restaurant_id" class="control-label">
          Restaurant
        </label>

        <%= select_tag(:restaurant_id, options_from_collection_for_select(Restaurant.all, :id, :name, @menu_listing.restaurant_id), :class => "form-control") %>
      </div>

      <!-- Label and input for menu_id -->
      <div class="form-group">
        <label for="menu_id" class="control-label">
          Menu
        </label>

        <input type="text" id="menu_id" name="menu_id" placeholder="Menu" class="form-control" value="<%= @menu_listing.menu_id %>">
      </div>

      <button class="btn btn-success">
        Create Menu Listing
      </button>
      or
      <a href="/menu_listings">Cancel</a>
    </form>
  </div>
</div>
