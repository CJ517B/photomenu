<div class="page-header">
  <h1>
    Menu listings
    <a href="/menu_listings/new" class="btn btn-lg btn-success">New Menu listing</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Restaurant</th>
        <th>Menu</th>
        <th>Actions</th>
      </tr>

      <% @menu_listings.each do |menu_listing| %>
      <tr>
        <td><%= menu_listing.restaurant.name %></td>
        <td><%= menu_listing.menu.name %></td>
        <td>
          <a href="/menu_listings/<%= menu_listing.id %>" class="btn btn-primary">Show</a>
          <a href="/menu_listings/<%= menu_listing.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_menu_listing/<%= menu_listing.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @menu_listings, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
